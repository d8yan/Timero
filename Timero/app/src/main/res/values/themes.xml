<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Timero" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.Timero.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/purple_700</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:itemBackground">@color/black</item>
        <item name="popupMenuBackground">@color/black</item>
    </style>
    <style name="input_text">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Theme.Timero.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#202020</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/timero_splash_screen</item>
        <item name="postSplashScreenTheme">@style/Theme.Timero</item>
    </style>
    <style name="task_button_add">
        <item name="android:background">@color/label</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="task_button_complete">
        <item name="android:background">#AF637FE4</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="task_clear" >
        <item name="colorButtonNormal">#F44336</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>